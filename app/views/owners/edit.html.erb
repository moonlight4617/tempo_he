<div class="form-signin">
  <div class="py-5 text-center">
    <h3 class="mb-3 font-weight-normal">オーナー情報変更</h3>
  </div>
  <div class="form-group">
    <%= form_with model: @owner, url: o_update_path, class: "needs-validation", local: "true" do |f| %>
    <%= render '/layouts/error_messages' %>
    <%= f.label :name, "名前" %><span class="required"> *必須項目</span>
    <%= f.text_field :name, class: "form-control" %>
    <br>

    <%= f.label :email, "Eメール" %><span class="required"> *必須項目</span>
    <%= f.text_field :email, class:"form-control" %>
    <br>
    <%= f.label :tel, "電話番号" %>
    <%= f.text_field :tel, class: "form-control" %><br>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: "form-control" %><br>
    <%= f.label :password, "パスワード" %><span class="required"> *変更しない場合空欄で大丈夫です</span>
    <%= f.password_field :password, class: "form-control" %><br>
    <%= f.label :password_confirmation, "パスワードの確認" %><span class="required"> *変更しない場合空欄で大丈夫です</span>
    <%= f.password_field :password_confirmation, class: "form-control" %><br>
    <%= f.submit label="登録", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
  <div class="text-center">
    <%= link_to "オーナーアカウントを削除する", o_destroy_path, method: "patch" ,data: { confirm: "一度アカウントを削除すると、元に戻せません。本当にアカウントそのものを削除しますか？" }, class: "btn btn-danger" %>
  </div>
</div>