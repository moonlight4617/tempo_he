<section class="container">
  <h3>マイアカウント</h3>
  <p>オーナー：<%= @owner.name %>
    <!-- 登録店舗があれか -->
    <% if @shops.present? %>
    <% @shops.each do |shop| %>
    <!-- 店舗が削除されてなければ -->
    <% if shop.del_flg != 1 %>
  <div class="row">
    <%= image_tag shop.image.url , class: "rounded mx-auto d-block col-6" %>
  </div>
  <h4 class="mt-3"><%= shop.name %></h4>

  <!----予約カレンダー---->
  <p>今後の予約</p>
  <% calendars = Calendar.where(shop_id: shop.id , rent_date: Date.today..Float::INFINITY)%>
  <!-- 予約が入ってれば -->
  <% if calendars.present?%>
  <% calendars.each do |cal|%>
  <ul>
    <li>日付：<%= cal.rent_date %>時間：<%= cal.start_time %></li>
    <p>
      <%= link_to "予約者：#{cal.user.name}", u_show_path %><br>
      <%= link_to "メッセージを送信する", ch_show_owner_path(shop.id, user: User.find(cal.user_id).public_uid) %>
    </p>
  </ul>
  <% end %>
  <!-- 予約がなければ -->
  <% else %>
  <p>＜予約はまだありません＞</p>
  <% end %>
  <!----予約カレンダー終わり---->

  <%= link_to "店舗詳細", s_show_path(shop), class: "btn btn-light mt-0 mr-2" %>
  <span>
    <%= link_to "メッセージ", ch_index_owner_path(shop), class: "btn btn-light mt-0 mr-2" %>
  </span>
  <span><%= link_to "予約枠の開放", s_res_path(shop), type: "button", class: "btn btn-light mt-0"%>
  </span><br>
  <% end %>
  <hr>
  <% end %>
  <% end %>
  <%= link_to "新しく店舗を登録する", s_new_path %><br>
  <%= link_to "オーナーアカウントの編集", o_edit_path %><br>
</section>