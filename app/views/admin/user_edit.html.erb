<div class="form-signin">
  <div class="py-5 text-center">
    <h3 class="mb-3 font-weight-normal"><%= @user.name %>ユーザー</h3>
    <h3 class="mb-3 font-weight-normal">情報編集</h3>
  </div>
  <div class="form-group row">
    <%= form_with model: @user, url: admin_user_update_path, class: "needs-validation", local: "true" do |f| %>
    <%= render '/layouts/error_messages' %>
    <%= f.hidden_field :id, value: @user.public_uid %>
    <%= f.label :name, "名前"%><span class="required"> *必須項目</span>
    <%= f.text_field :name, class: "form-control" %>
    <br>

    <%= f.label :email, "Eメール" %><span class="required"> *必須項目</span>
    <%= f.text_field :email, class:"form-control" %>
    <br>
    <%= f.label :tel, "電話番号" %>
    <%= f.text_field :tel, class: "form-control" %><br>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: "form-control" %><br>
    <%= f.label :password, "パスワード" %><span class="required"> *変更しない場合は空欄で大丈夫です</span>
    <%= f.text_field :password, class: "form-control" %><br>
    <%= f.label :password_confirmation, "パスワードの確認" %><span class="required">*変更しない場合は空欄で大丈夫です</span>
    <%= f.text_field :password_confirmation, class: "form-control" %><br>
    <%= f.label :image, "プロフィール画像" %>
    <%= f.file_field :image, class: "btn" %><br>
    <%= f.submit label="登録", class: "btn btn-primary btn-lg btn-block mb-4" %>
    <% end %>
    <%= link_to "アカウントの削除", admin_user_destroy_path(@user.public_uid), method: "patch" ,data: { confirm: "本当にアカウントそのものを削除しますか？" }, class:"btn btn-danger btn-md mt-4" %>
  </div>
</div>