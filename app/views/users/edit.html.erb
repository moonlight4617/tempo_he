<div class="form-signin">
  <div class="py-5 text-center">
    <h3 class="mb-3 font-weight-normal">ユーザー情報編集</h3>
  </div>
  <div class="form-group row">
    <%= form_for(@user, url: {controller: 'users', action: 'update', class: 'needs-validation'}) do |f| %>
    <%= render '/layouts/error_messages' %>
    <%= f.label :name, "名前"%><span class="required"> *必須項目</span>
    <%= f.text_field :name, class: "form-control" %>
    <br>

    <%= f.label :email, "Eメール" %><span class="required"> *必須項目</span>
    <%= f.text_field :email, class:"form-control" %>
    <br>
    <%= f.label :tel, "電話番号" %>
    <%= f.text_field :tel, class: "form-control" %><br>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: "form-control" %><br>
    <%= f.label :password, "パスワード" %><span class="required"> *変更しない場合は空欄で大丈夫です</span>
    <%= f.text_field :password, class: "form-control" %><br>
    <%= f.label :password_confirmation, "パスワードの確認" %><span class="required">*変更しない場合は空欄で大丈夫です</span>
    <%= f.text_field :password_confirmation, class: "form-control" %><br>
    <%= f.label :image, "プロフィール画像" %><br>
    <%= f.file_field :image, class: "btn btn-block" %><br>
    <%= f.submit label="登録", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
</div>